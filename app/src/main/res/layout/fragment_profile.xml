<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ui.ProfileFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textColor="@color/black"
                android:textSize="28dp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"/>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="-25dp"
                app:cardElevation="15dp"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="@color/white"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_margin="12dp">
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/user_icon"
                        android:layout_weight="0.1"/>
                    <View
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        style="@style/Divider.Vertical"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.6"
                        android:orientation="vertical"
                        android:gravity="center">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/txtFirstname"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="First "
                                android:textColor="@color/black"/>
                            <TextView
                                android:id="@+id/txtLastname"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Last"
                                android:textColor="@color/black"/>
                        </LinearLayout>
                        <TextView
                            android:id="@+id/txtEmail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="testing@testing.com"
                            android:textColor="@color/black"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    app:cardElevation="15dp"
                    app:cardCornerRadius="10dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardPreventCornerOverlap="true"
                    app:cardUseCompatPadding="true">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">
                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="50dp"
                            android:src="@drawable/ic_baseline_contact_support"
                            android:layout_weight="1"
                            android:layout_marginLeft="10dp"
                            android:layout_gravity="center"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Perhatian, aplikasi sedang dalam tahap pengembangan. Mohon maaf jika ada kesalahan fitur. Tim kami sedang berusaha untuk membetulkannya."
                            android:layout_weight="1"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_gravity="center"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:elevation="5dp"
                app:cardElevation="2dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="25dp">
                    <LinearLayout
                        android:id="@+id/One"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Akun"
                            android:paddingLeft="20dp"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:textColor="@color/black"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginTop="5dp"
                            android:gravity="center|left"
                            android:paddingHorizontal="20dp"
                            android:text="   Perjalanan Saya"
                            android:textColor="@color/black"
                            android:textSize="15dp"
                            android:drawableRight="@drawable/ic_baseline_keyboard_arrow_right"
                            android:drawableTint="@color/black"/>
                        <View
                            android:layout_marginRight="20dp"
                            android:layout_marginLeft="20dp"
                            style="@style/Divider.Horizontal"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginTop="5dp"
                            android:gravity="center|left"
                            android:paddingHorizontal="20dp"
                            android:text="   Pengaturan"
                            android:textColor="@color/black"
                            android:textSize="15dp"
                            android:drawableRight="@drawable/ic_baseline_keyboard_arrow_right"
                            android:drawableTint="@color/black"/>
                        <View
                            android:layout_marginRight="20dp"
                            android:layout_marginLeft="20dp"
                            style="@style/Divider.Horizontal"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginTop="5dp"
                            android:gravity="center|left"
                            android:paddingHorizontal="20dp"
                            android:text="   Pusat Bantuan"
                            android:textColor="@color/black"
                            android:textSize="15dp"
                            android:drawableRight="@drawable/ic_baseline_keyboard_arrow_right"
                            android:drawableTint="@color/black"/>
                        <View
                            android:layout_marginRight="20dp"
                            android:layout_marginLeft="20dp"
                            style="@style/Divider.Horizontal"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginTop="5dp"
                            android:gravity="center|left"
                            android:paddingHorizontal="20dp"
                            android:text="   Tentang Kami"
                            android:textColor="@color/black"
                            android:textSize="15dp"
                            android:drawableRight="@drawable/ic_baseline_keyboard_arrow_right"
                            android:drawableTint="@color/black"/>
                        <View
                            android:layout_marginRight="20dp"
                            android:layout_marginLeft="20dp"
                            style="@style/Divider.Horizontal"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="100dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp">
                <Button
                    android:id="@+id/btnLogout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Logout"
                    android:textColor="@color/white"
                    android:background="@drawable/button_rounded"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</FrameLayout>