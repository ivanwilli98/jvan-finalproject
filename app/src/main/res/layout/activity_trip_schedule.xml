<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.TripScheduleActivity"
    android:orientation="vertical">

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/listTripSchedule"
        android:scrollbars="vertical"
        android:background="@android:color/transparent"/>

    <TextView
        android:id="@+id/internet_hilang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hidupkan Koneksi Internet"
        android:textSize="16sp"
        android:gravity="center"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/trip_schedule_kosong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tidak ada jadwal"
        android:textSize="16sp"
        android:gravity="center"
        android:visibility="gone"/>

</LinearLayout>